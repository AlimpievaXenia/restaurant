<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-10 col-md-8 col-lg-6">
            <!-- Form -->
            <form class="signupForm" action="" method="post">
                <div class="form-group mt-5">
                    <input id="username-input" type="text" name="username" class="form-control" placeholder="name..." required>
                </div>
                <div class="form-group mt-5">
                    <input id="email-input" type="email" name="email" class="form-control" placeholder="email..." required>
                </div>
                <div class="form-group mt-5">
                    <input id="password-input" type="password" name="password" class="form-control"
                           placeholder="password..." required>
                </div>
                <div class="form-group mt-5">
                    <select name="role" class="custom-select" required>
                        <option selected value="">select your role</option>
                        <option value="buyer">buyer</option>
                        <option value="seller">seller</option>
                    </select>
                </div>
                <div class="text-center mt-5">
                    <button type="submit" class="btn btn-secondary">&nbsp; register &nbsp;</button>
                </div>
            </form>
            <!-- Form end -->
        </div>
    </div>
</div>
